<Window x:Class="TouchGrass.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Width="400"
        SizeToContent="Height"
        Style="{StaticResource FuturisticWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hotkey Section -->
        <GroupBox Header="Global Hotkey" Grid.Row="0" Padding="10" Foreground="{StaticResource TextWhite}" BorderBrush="{StaticResource NeonBlue}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="HotkeyTextBox" IsReadOnly="True" PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" 
                         Style="{StaticResource FuturisticTextBoxStyle}"
                         Text="Alt + Space" VerticalContentAlignment="Center" Height="25"/>
                <TextBlock Grid.Column="1" Text="Press any key combination" 
                           VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic" Foreground="Gray"/>
            </Grid>
        </GroupBox>

        <!-- Startup Section -->
        <GroupBox Header="General" Grid.Row="1" Margin="0,10,0,0" Padding="10" Foreground="{StaticResource TextWhite}" BorderBrush="{StaticResource NeonBlue}">
            <StackPanel>
                <CheckBox x:Name="RunOnStartupCheckBox" Content="Run on Startup" Margin="0,0,0,5" Foreground="{StaticResource TextWhite}"/>
                <CheckBox x:Name="ShowTrayIconCheckBox" Content="Show Tray Icon" Foreground="{StaticResource TextWhite}"/>
            </StackPanel>
        </GroupBox>

        <!-- Danger Zone -->
        <GroupBox Header="Danger Zone" Grid.Row="2" Margin="0,10,0,0" Padding="10" Foreground="{StaticResource TextWhite}" BorderBrush="Red">
            <StackPanel>
                <TextBlock Text="Irreversible Actions" Foreground="Red" FontWeight="Bold" Margin="0,0,0,5"/>
                <Button Content="Delete All Library" Click="DeleteLibrary_Click" 
                        Background="DarkRed" Foreground="White" BorderBrush="Red"
                        HorizontalAlignment="Left" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Margin="0,0,10,0" IsCancel="True" Style="{StaticResource FuturisticButtonStyle}"/>
            <Button Content="Save" Click="Save_Click" IsDefault="True" Style="{StaticResource FuturisticButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
