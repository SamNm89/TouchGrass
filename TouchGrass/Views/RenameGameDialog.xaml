<Window x:Class="TouchGrass.Views.RenameGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Game" Height="150" Width="300"
        Style="{StaticResource FuturisticWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter new name:" FontWeight="SemiBold"/>

        <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,10" VerticalContentAlignment="Center" Style="{StaticResource FuturisticTextBoxStyle}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="70" Margin="0,0,10,0" IsCancel="True" Style="{StaticResource FuturisticButtonStyle}"/>
            <Button Content="Save" Width="70" Click="Save_Click" IsDefault="True" Style="{StaticResource FuturisticButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
