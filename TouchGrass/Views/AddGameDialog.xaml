<Window x:Class="TouchGrass.Views.AddGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Game" SizeToContent="Height" Width="400"
        Style="{StaticResource FuturisticWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Game Title" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox x:Name="TitleBox" Grid.Row="1" Margin="0,0,0,15" Style="{StaticResource FuturisticTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Text="Cover Image" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Border BorderBrush="{StaticResource NeonBlue}" BorderThickness="1" Background="{StaticResource CardDark}" HorizontalAlignment="Center">
                <Image x:Name="CoverImagePreview" Stretch="Uniform" Width="150" Height="200"/>
            </Border>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" IsCancel="True" Margin="0,0,10,0" Padding="15,5" Style="{StaticResource FuturisticButtonStyle}"/>
            <Button Content="Save" Click="Save_Click" IsDefault="True" Padding="15,5" Style="{StaticResource FuturisticButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
